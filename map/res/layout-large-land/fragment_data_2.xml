<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
     <de.dhbw.ui.GaugeView
       android:id="@+id/gauge_view1"
       android:layout_width="200dp"
       android:layout_height="200dp"
       android:layout_alignParentLeft="true"
       android:layout_marginTop="50dp"
       android:layout_marginLeft="20dp"/>

   <de.dhbw.ui.GaugeView
       android:id="@+id/gauge_view2"
       android:layout_width="200dp"
       android:layout_height="200dp"
       android:layout_below="@+id/gauge_view1"
       android:layout_marginTop="50dp"
       android:layout_marginLeft="20dp"/>
   
   <ProgressBar
  android:id="@+id/vertical_progressbar"
  android:layout_width="75dp"
  android:layout_height="420dp"
  style="@style/Widget.ProgressBar.Vertical"
  android:layout_toRightOf="@+id/gauge_view2"
  android:layout_marginLeft="30dp"
  android:layout_marginTop="50dp"
/>
   <ProgressBar
  android:id="@+id/vertical_progressbar2"
  android:layout_width="75dp"
  android:layout_height="420dp"
  style="@style/Widget.ProgressBar.Vertical"
  android:layout_toRightOf="@+id/vertical_progressbar"
  android:layout_marginLeft="30dp"
  android:layout_marginTop="50dp"
/>
   <LinearLayout
       android:id="@+id/graphLayout"
       android:layout_width="fill_parent"
       android:layout_height="800dp"
       android:layout_alignParentTop="true"
       android:layout_centerHorizontal="true"
       android:gravity="center"
       android:layout_marginTop="10dp"
       android:layout_toRightOf="@+id/vertical_progressbar2"
       android:orientation="vertical" >
   </LinearLayout>

</RelativeLayout>
