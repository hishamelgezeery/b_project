<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.map.MainActivity$OverviewFragment" >

   <LinearLayout
       android:id="@+id/graph1"
       android:layout_width="fill_parent"
       android:layout_height="240dp"
       android:layout_alignParentTop="true"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="32dp"
       android:background="#ffffff"
       android:orientation="vertical" >
   </LinearLayout>
   <EditText
       android:id="@+id/SendDataField"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignLeft="@+id/graph1"
       android:layout_centerVertical="true"
       android:layout_marginLeft="25dp"
       android:ems="10" android:inputType="number">

       <requestFocus />
   </EditText>

   <Button
       android:id="@+id/sendDataButton"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignBottom="@+id/SendDataField"
       android:layout_marginLeft="47dp"
       android:layout_toRightOf="@+id/SendDataField"
       android:text="Send" />

</RelativeLayout>